@{
    Layout = "/Areas/admin/Views/_Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Kategori Yönetimi";
}


<div class="col-md-12" style="margin-top:25px;">
    <div class="row">
        <a href="/admin/Kategori" class="btn btn-primary" style="margin-top:15px;margin-bottom:15px;">Geri Git</a>

        <form action="/admin/kategori/Update/@Model.id" method="post" enctype="multipart/form-data">

            <img src="/images/@Model.Images" style="margin-bottom:15px;width:150px" />

            <input type="file" name="Images" class="form-control" style="margin-top:15px;margin-bottom:15px;" />

            <input type="text" name="CategoryName" value="@Model.CategoryName" style="margin-top:15px;margin-bottom:15px;" class="form-control" />

            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>

        @if (ViewBag.Mesaj != null)
        {

            <div class="alert alert-dark">@ViewBag.Mesaj</div>
        }

    </div>
</div>